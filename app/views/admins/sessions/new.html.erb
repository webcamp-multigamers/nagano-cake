<div class="container">
  <div class="row">
    <div class="col-lg-10 mt-5">
      <table class="table table-borderless">
        <thead>
          <tr><th colspan="2"><h4>管理者ログイン</h4></th>
        </thead>
        <tbody>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <tr><td>メールアドレス</td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
            <tr><td>パスワード</td><td><%= f.password_field :password, autocomplete: "current-password" %></td></tr>
            <tr><td><%= f.submit "ログイン", class: "btn btn-primary" %></td></tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
