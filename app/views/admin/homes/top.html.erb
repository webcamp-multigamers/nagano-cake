<div class="container mt-5">
  <h3 class="row my-3 table-active">注文履歴一覧</h3>
  <table class="row table table-bordered">
    <thead class="col-12">
      <tr class="row">
        <th class="col-3">購入日時</th>
        <th class="col-3">購入者</th>
        <th class="col-3">注文個数</th>
        <th class="col-3">注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order|%>
      <tbody class="col-12">
        <tr class="row">
          <td class="col-3"><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
          <td class="col-3"><%= order.name %></td>
          <td class="col-3">
            <%= OrderItem.where(order_id: order.id).sum(:order_quantity) %>
          </td>
          <td class="col-3 btn btn-primary btn-sm"><%= order.order_status %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>