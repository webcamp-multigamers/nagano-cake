<div class="container">
	<div class="row">
	  <h3>商品詳細</h3>
	</div>
  <div class="row"> 
    <div class="col-4">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
    </div>
    <div class="col-8">
      <p>
        商品名　　　　　　<%= @item.name%>
      </p>
      <p>
        商品説明　　　　　<%= @item.introduction %>
      </p>
      <p>
        ジャンル　　　　　<%= %>
      </p>
      <p>
        税込価格(税抜価格)          <%= (1.1*@item.price).to_s(:delimited) %>
                                (<%= @item.price.to_s(:delimited) %>) 円
        
      </p>
      <p>
        販売ステータス     <% if @item.is_sales_status == true %>
                             販売中
                           <% else %>
                             販売停止中
                           <% end %>
      </p>


  <div class="row">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
  </div>
</div>

</div>
</div>
