<div class="container">
	<div class="row">
	  <h3 class="row my-3 table-active">商品詳細</h3>
	</div>
  <div class="row">
    <div class="col-3 offset-1">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
    </div>
    <table class="col-8 table table-borderless">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name%></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
          <td>
            <%= @item.taxin_price.to_s(:delimited) %>
            (<%= @item.price.to_s(:delimited) %>) 円
          </td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_sales_status == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success offset-6" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
