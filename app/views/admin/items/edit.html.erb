<div class="container">
  <div class="row">
    <h2 class="col-2 text-center table-active my-3">商品編集</h2>
  </div>
  <div class="row">
    <div class="col-9 offset-3">
      <%= form_with model: @item, url:admin_item_path(@item.id), local: true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :image, "商品画像" %></td>
              <td><%= f.attachment_field :image %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :name, "商品名" %></td>
              <td><%= f.text_field :name, size: 30, placeholder: "商品名" %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :introduction, "商品説明" %></td>
              <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :genre, "ジャンル" %></td>
              <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :price, "税抜価格" %></td>
              <td><%= f.text_field :price, placeholder: "1000" %>円</td>
            </tr>
            <tr class="mb-3">
              <td class="text-center">販売ステータス</td>
              <td>
                <%= f.label :is_sales_status, "販売中", value: "true" %>
                <%= f.radio_button :is_sales_status, 'true' %>
                <%= f.label :is_sales_status, "販売停止中", value: "false" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit '新規登録', class: "btn btn-success mb-3 offset-1" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

