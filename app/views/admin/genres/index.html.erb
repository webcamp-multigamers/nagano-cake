<div class="container">
  <h2 class="row">ジャンル一覧・追加仮</h2>
  <!--ジャンル追加フォーム-->
  <div class="row">
    <%= form_with model: @genre, local:true do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>
  </div>
  <!--ジャンル一覧テーブル-->
  <table class="table table-hover">
    <thead>
      <th>ジャンル</th>
    </thead>
    <tbody>
      <td>ジャンル1</td>
    </tbody>
  </table>
</div>