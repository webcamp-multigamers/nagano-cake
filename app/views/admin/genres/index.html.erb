<div class="container">
  <h2 class="row">ジャンル一覧・追加仮</h2>
  <!--ジャンル追加フォーム-->
  <div class="col-6">
    <%= form_with model: @genre, url:admin_genres_path, local:true, class: "row" do |f| %>
      <%= f.label :name, "ジャンル名", class: "col-3" %>
      <%= f.text_field :name, placehilder: "ジャンル名", class: "form-control col-4 offset-1" %>
      <%= f.submit "新規登録", class: "btn btn-success col-3 offset-1" %>
    <% end %>
  <!--ジャンル一覧テーブル-->
    <table class="table table-hover">
      <thead>
        <th>ジャンル</th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>