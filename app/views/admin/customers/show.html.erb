<div class="container">
  <div class="row">
    <div class="col-lg-10 mt-5">
    	<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
      <table class="table">
        <tbody>
        	<tr>
        		<td>会員ID</td>
        		<td><%= @customer.id %></td>
        	</tr>
        	<tr>
        		<td>氏名</td>
        		<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        	</tr>
        	<tr>
        		<td>フリガナ</td>
        		<td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        	</tr>
        	<tr>
        		<td>郵便番号</td>
        		<td><%= @customer.postal_code %></td>
        	</tr>
        	<tr>
        		<td>住所</td>
        		<td><%= @customer.address %></td>
        	</tr>
        	<tr>
        		<td>電話番号</td>
        		<td><%= @customer.telephone_number %></td>
        	</tr>
        	<tr>
        		<td>メールアドレス</td>
        		<td><%= @customer.email %></td>
        	</tr>
        	<tr>
        		<td>会員ステータス</td>
        		<td>
        			<% unless @customer.is_secede_frag %>
        	     <p class="text-success">有効</p>
        	    <% else %>
        	     <p class="text-muted">退会</p>
        	    <% end %>
        		</td>
         	</tr>
         	<tr>
         		<td></td>
         		<td>
         			<%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-success mr-5' %>
         			<%= link_to "注文履歴一覧を見る", admin_path(:customer_id => @customer.id), class: 'btn btn-primary' %>
         		</td>
         	</tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
