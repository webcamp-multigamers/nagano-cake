<!DOCTYPE html>
<html>
  <head>
    <title>NAGANOCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <%end%>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
