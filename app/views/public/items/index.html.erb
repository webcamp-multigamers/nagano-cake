<div class="container">
  <div class="row">
    <h3>商品一覧</h3><p>(全<%= @quantity %>件)</p>
    <div class="col-xs-10">
      <% @items.each do |item| %>
       <div>
         <%= link_to item_path(item.id) do %>
           <%= attachment_image_tag item, :image, :fill, 300,300, format:'jpeg' %>
          <% end %>
       </div>
       <p><%= item.name %></p>
       <p>¥<%= (item.price).to_s(:delimited) %></p>
      <% end %>
      <div class="text-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>