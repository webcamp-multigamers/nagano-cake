<div class="container">
  <div class="row">
    <h2>注文情報入力</h2>
  </div>
  <div class="row">
    <%= form_with model: @local: true do |f| %>
      <b>支払い方法</b>
      <div>
        <%= f.radio_button :payment_integer, 1 %>
        <%= f.label :payment_integer, "クレジットカード", volue: 1, style: "display: inline-block;" %><br>
        <%= f.radio_button :payment_integer, 0 %>
        <%= f.label :payment_integer, "銀行振込", volue: 0, style: "display: inline-block;" %>
      </div>
      <b>配送先</b>
      <div>
        <%= f.radio_button :nunber, 1 %>
        ご自身の住所<br>
        <%= "#{current_customer.postal_code} #{current_customer.address}" %>
        <%= "#{current_customer.last_name} #{current_customer.first_name}" %><br>
      </div>
      <div>
        <%= f.radio_button :nunber, 2 %>
        <%= f.label :nunder, "登録済み住所から選択", volue: 2, style: "display: inline-block;" %><br>
        <%= f.collection_select :address_id, Address.all, :id, :order_address %><br>
      </div>
      <div>
        <%= f.radio_button :nunber, 3 %>
        <%= f.label :nunber, "新しいお届け先", volue: 3, style: "display: inline-block;" %><br>
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %><br>
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %><br>
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>
      <div>
         <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
