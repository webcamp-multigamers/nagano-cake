<div class="container">
  <div class="row">
    <h2>注文情報入力</h2>
  </div>
  <div class="row">
    <%= form_with local: true do |f| %>
      <b>支払い方法</b>
      <div>
        <%= f.radio_button :payment_integer, 1 %>
        <%= f.label :payment_integer, "クレジットカード", volue: 1, style: "display: inline-block;" %>
        <%= f.radio_button :payment_integer, 0 %>
        <%= f.label :payment_integer, "銀行振込", volue: 0, style: "display: inline-block;" %>
      </div>
      <b>配送先</b>
      <div>
        <%= f.radio_button :nunber, 3 %>
        <%= f.label :nunber, "新しいお届け先", volue: 3, style: "display: inline-block;" %><br>
          

          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code %><br>
          <%= f.label :address, "住所" %>
          <%= f.text_field :address %><br>
          <%= f.label :addressee, "宛名" %>
          <%= f.text_field :addressee %>
          </div>
      </div>
      <div>
      </div>
    <% end %>
  </div>
</div>