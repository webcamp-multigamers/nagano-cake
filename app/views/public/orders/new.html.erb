<div class="container">
  <div class="row">
    <h2>注文情報入力</h2>
  </div>
  <div class="row">
    <%= form_with model: @order, url:check_orders_path, method: :post, local: true do |f| %>
      <b>支払い方法</b>
      <div>
        <%= f.radio_button :payment, 1 %>
        <%= f.label :payment, "クレジットカード", value: 1, style: "display: inline-block;" %><br>
        <%= f.radio_button :payment, 0 %>
        <%= f.label :payment, "銀行振込", value: 0, style: "display: inline-block;" %>
      </div>
      <b>配送先</b>
      <div>
        <%= f.radio_button :address_number,1 %>
        <%= f.label :address_number, "住所", value: 1, style: "display: inline-block;" %>
        <%= "#{current_customer.postal_code}" %>
        <%= "#{current_customer.address}" %>
        <%= "#{current_customer.last_name}" %>
        <%= "#{current_customer.first_name}" %>
      </div>
      <div>
        <%= f.radio_button :address_number, 2 %>
        <%= f.label :address_numder, "登録済み住所から選択", value: 2, style: "display: inline-block;" %><br>
        <%= f.collection_select :address, Address.where(customer_id: current_customer.id), :id, :address_all, prompt: "選択してください"%><br>
      </div>
      <div>
        <%= f.radio_button :address_number, 3 %>
        <%= f.label :address_number, "新しいお届け先", value: 3, style: "display: inline-block;" %><br>
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %><br>
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %><br>
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>
      <div>
         <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
