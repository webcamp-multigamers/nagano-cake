<div class="container">
  <h3 class="row table-active">注文履歴詳細</h3>
  <div class="row">
    <div class="col-8">
　    <p>注文情報</p>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <p><%= "〒#{@order.postal_code}" %></p>
  					<p><%= @order.address %></p>
  					<p><%= @order.name %></p>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <p>請求情報</p>
      <table class="table table-bordered table-hover">
        <tr>
          <th>商品合計</th>
          <td>作成次第入れる</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_price %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <p>注文内容</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価 (税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>aaaaaaaaaa</td>
          <td>aaaaaaaaaa</td>
          <td>aaaaaaaaaa</td>
          <td>aaaaaaaaaa</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>