<h1>会員情報編集</h1>
<div class="col-lg-8">
  <%= form_with model:@customer, local:true do |form| %>
    <table class="table table-borderless">
      <tbody>
        <tr><td>氏名</td><td><%= form.text_field :last_name %>　<%= form.text_field :first_name %></td></tr>
        <tr><td>フリガナ</td><td><%= form.text_field :last_name_kana %>　<%= form.text_field :first_name_kana %></td></tr>
        <tr><td>郵便番号</td><td><%= form.text_field :postal_code %></td></tr>
        <tr><td>住所</td><td><%= form.text_field :address %></td></tr>
        <tr><td>電話番号</td><td><%= form.text_field :telephone_number %></td></tr>
        <tr><td>メールアドレス</td><td><%= form.text_field :email %></td></tr>
      </tbody>
    </table>
    <%= form.submit "編集内容を保存", class:"btn btn-success"%>　<%= link_to "退会する", secession_customer_path, class:"btn btn-danger" %>
  <%end%>
</div>