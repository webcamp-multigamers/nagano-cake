<h2>新規会員登録</h2>

<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-borderless">
        <thead>
          <tr><th colspan="2">新規会員登録</th>
        </thead>
        <tbody>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "customers/shared/error_messages", resource: resource %>
            <tr><td>名前</td><td>(姓)　<%= f.text_field :last_name, autofocus: true %></td><td>(名)　<%= f.text_field :first_name %></td></tr>
            <tr><td>フリガナ</td><td>(セイ)<%= f.text_field :last_name_kana %></td><td>(メイ)<%= f.text_field :first_name_kana %></td></tr>
            <tr><td>メールアドレス</td><td><%= f.text_field :email %></td></tr>
            <tr><td>郵便番号(ハイフンなし)</td><td><%= f.text_field :postal_code %></td></tr>
            <tr><td>住所</td><td><%= f.text_field :address %></td></tr>
            <tr><td>電話番号(ハイフンなし)</td><td><%= f.text_field :telephone_number %></td></tr>
            <tr><td>パスワード(6文字以上)</td>
            <td>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
            </tr>
            <tr><td>パスワード(確認用)</td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td></tr>
            <tr><td></td><td>
              <div class="actions">
                <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
              </div>
            </td></tr>
          </tbody>
        </table>

        <% end %>
        <br><h4>既に登録済みの方</h4>
        <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>
</div>