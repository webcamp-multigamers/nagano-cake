<h2>新規会員登録</h2>

<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-borderless">
        <thead>
          <tr><th colspan="2">新規会員登録</th>
        </thead>
        <tbody>
          <tr><td>名前</td><td>Yamada</td><td>16</td></tr>
          <tr><td>フリガナ</td><td>Suzuki</td><td>26</td></tr>
          <tr><td>メールアドレス</td><td>Tanaka</td><td>36</td></tr>
          <tr><td>郵便番号(ハイフンなし)</td><td>Tanaka</td><td>36</td></tr>
          <tr><td>住所</td><td>Tanaka</td><td>36</td></tr>
          <tr><td>電話番号(ハイフンなし)</td><td>Tanaka</td><td>36</td></tr>
          <tr><td>パスワード(6文字以上)</td><td>Tanaka</td><td>36</td></tr>
          <tr><td>パスワード(確認用)</td><td>Tanaka</td><td>36</td></tr>
        </tbody>
      </table>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>
</div>