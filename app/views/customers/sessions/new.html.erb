<h2>ログイン</h2>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <thead>
            <tr><th colspan="2"><h4>新規会員登録</h4></th></tr>
        </thead>
          <tbody>
            <tr><td>メールアドレス</td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
            <tr><td>パスワード</td><td><%= f.password_field :password, autocomplete: "current-password" %></td></tr>
            <tr><td class="actions"><%= f.submit "ログイン", class: "btn btn-primary" %></td></tr>
            <tr><td><h4>会員登録がお済でない方</h4></td></tr>
            <tr><td class="actions"><%= render "customers/shared/links" %></td></tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>