<h2>ログイン</h2>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-borderless">
        <thead>
          <tr><th colspan="2"><h4>新規会員登録</h4></th>
        </thead>
        <tbody>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <tr><td>メールアドレス</td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
            <tr><td>パスワード</td><td><%= f.password_field :password, autocomplete: "current-password" %></td></tr>
            <tr><td><%= f.submit "ログイン", class: "btn btn-primary" %></td></tr>
          <% end %>
          <tr><td><h4>会員登録がお済でない方</h4></td></tr>
          <tr><td><%= render "customers/shared/links" %></td></tr>
        </tbody>
      </table>

    </div>
  </div>
</div>